{
  "name": "tsx-strict",
  "version": "0.2.0",
  "description": "Type-safe TSX runner with automatic Type-checking",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "tsx-strict": "./bin/tsx-strict.js"
  },
  "scripts": {
    "build": "npx rimraf dist && tsc",
    "prepublishOnly": "npm run build",
    "postbuild": "npx rimraf dist/examples",
    "dev": "ts-node-dev src/cli.ts src/examples/development/src/app.ts",
    "start": "node bin/tsx-strict.js src/examples/development/src/app.ts",
    "test": "jest --coverage",
    "clean": "npx rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "tsx",
    "typescript",
    "type-checking",
    "cli",
    "runner",
    "type-safe"
  ],
  "author": "Uanela Como",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/uanela/tsx-strict.git"
  },
  "bugs": {
    "url": "https://github.com/uanela/tsx-strict/issues"
  },
  "homepage": "https://github.com/uanela/tsx-strict#readme",
  "files": ["dist", "bin", "README.md", "LICENSE"],
  "engines": {
    "node": ">=20.0.0"
  },
  "peerDependencies": {
    "tsx": "^4.20.5"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.0.0",
    "@types/node-cleanup": "^2.1.5",
    "@types/ps-tree": "^1.1.6",
    "jest": "^30.2.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "cross-spawn": "^7.0.6",
    "node-cleanup": "^2.1.2",
    "ps-tree": "^1.2.0",
    "string-argv": "^0.3.2"
  }
}
